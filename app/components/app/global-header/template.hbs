<header class={{if forli.showLoginDialog "bring-back"}}>
{{#paper-toolbar}}
  {{#paper-toolbar-tools}}
    {{#paper-button class="burger-menu" iconButton=true}}
      {{paper-icon "menu"}}
    {{/paper-button}}
    {{#link-to 'index' (query-params tag_ids=undefined filter=undefined)}}
      <h2 class="text-semibold">Forli</h2>
    {{/link-to}}
    <span class="flex"></span>
    {{#if showSearchBar}}
      {{app/quick-search}}
    {{/if}}
    {{#paper-button iconButton=true onClick=(action 'toggleSearch')}}
      {{paper-icon "search"}}
    {{/paper-button}}
    
    {{#link-to 'ask'}}
      {{#paper-button iconButton=true}}
        {{paper-icon "add_circle_outline"}}
      {{/paper-button}}
    {{/link-to}}
    {{#if forli.userLoggedIn}}
      {{#paper-button iconButton=true}}
        {{paper-icon "account_circle"}}
      {{/paper-button}}
    {{else}}
      {{#paper-button raised=true primary=true class="login-button" onClick=(action "promptDialog")}}log in{{/paper-button}}
    {{/if}}
  {{/paper-toolbar-tools}}
{{/paper-toolbar}}
<div class="toolbar-bottom"></div>
</header>
