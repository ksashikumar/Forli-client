<header class={{if forli.showLoginDialog "bring-back"}}>
{{#paper-toolbar}}
  {{#paper-toolbar-tools}}
    {{#paper-button class="burger-menu" iconButton=true}}
      {{paper-icon "menu"}}
    {{/paper-button}}
    {{#link-to 'home' (query-params tag_ids=undefined filter=undefined)}}
      <h2 class="text-semibold">Forli</h2>
    {{/link-to}}
    <span class="flex"></span>
    {{#if forli.searchEnabled}}
      {{app/quick-search showSearchBar=showSearchBar}}
    {{/if}}
    {{#paper-button class="global-search" iconButton=true}}
      {{paper-icon "search"}}
    {{/paper-button}}

    {{#link-to 'ask'}}
      {{#paper-button iconButton=true}}
        {{paper-icon "add_circle_outline"}}
      {{/paper-button}}
    {{/link-to}}
    {{#if currentUser.user}}
      <div class="dropdown">
        <div class="dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          {{#paper-button iconButton=true}}
            {{paper-icon "account_circle"}}
          {{/paper-button}}
        </div>
        <div class="dropdown-menu profile-dropdown" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" onClick={{action "logout"}}>Logout</a>
        </div>
      </div>
    {{else}}
     {{#link-to 'login'}}
        {{#paper-button raised=true primary=true class="login-button"}}Login{{/paper-button}}
      {{/link-to}}
    {{/if}}
  {{/paper-toolbar-tools}}
{{/paper-toolbar}}
<div class="toolbar-bottom"></div>
</header>
