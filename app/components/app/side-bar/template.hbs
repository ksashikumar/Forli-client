<div class="side-navbar {{routeName}} {{if forli.showLoginDialog "bring-back"}}">
  {{#paper-list}}
    {{#paper-subheader}}Tags{{/paper-subheader}}
    {{#if tags}}
      {{#each tags as |item|}}
        {{#paper-item class="tag"}}
          <p class="tag-item tag-{{item.color}}">{{item.name}}</p>
        {{/paper-item}}
      {{/each}}
    {{else}}
      {{app/app-loader level1=true}}
    {{/if}}
    {{#paper-item class="text-link"}}<a href="#">..more</a>{{/paper-item}}
  {{/paper-list}}
  <div class="ask-btn-wrapper">
  {{#link-to 'ask'}}
    {{#paper-button raised=true primary=true}}Ask Question{{/paper-button}}
  {{/link-to}}
  </div>
</div>
