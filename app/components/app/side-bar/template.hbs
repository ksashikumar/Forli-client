<div class="side-navbar {{routeName}}">
  {{#paper-list}}
    {{#paper-subheader}}Filter{{/paper-subheader}}
    {{#paper-item class="tag"}}
      {{#link-to "index" (query-params filter="latest")}}<p class="tag-item active">Latest</p>{{/link-to}}
    {{/paper-item}}
    {{#paper-item class="tag"}}
      {{#link-to "index" (query-params filter="trending")}}<p class="tag-item">Trending</p>{{/link-to}}
    {{/paper-item}}
    {{#paper-item class="tag"}}
      {{#link-to "index" (query-params filter="Unanswered")}}<p class="tag-item">Unanswered</p>{{/link-to}}
    {{/paper-item}}
  {{/paper-list}}
  {{#paper-list}}
    {{#paper-subheader}}Tags{{/paper-subheader}}
    {{#if tags}}
      {{#each tags as |item|}}
        {{#paper-item class="tag"}}
          {{#link-to "index" (query-params tag_ids=item.id)}}<p class="tag-item tag-{{item.color}}">{{item.name}}</p>{{/link-to}}
        {{/paper-item}}
      {{/each}}
    {{else}}
      {{app/app-loader level1=true}}
    {{/if}}
    {{#if (gt meta.count limit)}}
      {{#paper-item class="text-link pt-1"}}{{#link-to 'tag-list'}}..more{{/link-to}}{{/paper-item}}
    {{/if}}
  {{/paper-list}}
  <div class="ask-btn-wrapper">
  {{#link-to 'ask'}}
    {{#paper-button raised=true primary=true}}Ask Question{{/paper-button}}
  {{/link-to}}
  </div>
</div>
